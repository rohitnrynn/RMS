@model Retail.Models.ViewModel.CustomModelBag
@{
    ViewData["Title"] = "CustomerDetails";
}

<div class="container-fluid mt-5">
    <h1><strong>Enter Customer Details</strong></h1>

    <form class="form-inline">
        <label class="navbar-brand font-weight-light mr-sm-2"><b>Customer Phone :</b></label>
        @Html.TextBoxFor(m => m.Buyer.BuyerPhone, new { @class = "form-control form-control-sm mr-sm-2", @type = "number" })
        @Html.ValidationMessageFor(m => m.Buyer.BuyerPhone, "", new { @class = "text-danger" })
        <button type="submit" class="btn btn-sm btn-dark mr-sm-2" asp-action="BillProcess" formmethod="get">Find</button>
        <div>
            <button type="button" data-toggle="modal" data-target="#addcustomer" class="btn btn-sm btn-dark mr-sm-2">Add Customer</button>
        </div>
    </form>
    <br />
    <br />
    <table class="table table-borderless">
        <tbody>
            <tr>
                <td>
                    <label class="mr-sm-2">Name</label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Buyer.BuyerName, new { @class = "form-control form-control-sm", @type = "text" })
                    @Html.ValidationMessageFor(m => m.Buyer.BuyerName, "", new { @class = "text-danger" })
                </td>
                <td><label class="mr-sm-2">Phone Number</label></td>
                <td class="form-inline">
                    @Html.TextBoxFor(m => m.Buyer.BuyerPhone, new { @class = "form-control form-control-sm", @type = "number" })
                    @Html.ValidationMessageFor(m => m.Buyer.BuyerPhone, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    <label class="mr-sm-2">Address</label>
                </td>
                <td>
                    @Html.TextAreaFor(m => m.Buyer.BuyerAddress, new { @class = "form-control form-control-sm",@style="resize:none", @rows = "3" })
                    @Html.ValidationMessageFor(m => m.Buyer.BuyerAddress, "", new { @class = "text-danger" })
                </td>
                <td>
                    <label class="mr-sm-2">Email</label>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Buyer.BuyerEmail, new { @class = "form-control form-control-sm", @type = "email" })
                    @Html.ValidationMessageFor(m => m.Buyer.BuyerEmail, "", new { @class = "text-danger" })
                </td>
            </tr>
        </tbody>
    </table>

</div>
<form class="form-inline float-right">
    <button type="submit" class="btn btn-lg btn-dark mr-sm-2" asp-action="SaveBill" formmethod="get">Save And Print</button>
</form>
<div class="modal fade" id="addcustomer">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <div>
                    <h2>Add Customer</h2>
                </div>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="container bg-white">
                    <form class="pt-1" method="post" asp-controller="POS" asp-action="AddCustomer">
                        <div class="form-group">
                            <label asp-for="Buyer.BuyerName"><strong>Name</strong></label>
                            <input asp-for="Buyer.BuyerName" type="text" class="form-control" id="name" placeholder="Name" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Buyer.BuyerPhone"><strong>Phone Number</strong></label>
                            <input asp-for="Buyer.BuyerPhone" type="text" class="form-control" id="phone" placeholder="Phone Number" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Buyer.BuyerAddress"><strong>Address</strong></label>
                            <textarea asp-for="Buyer.BuyerAddress" type="text" style="resize:none" row="4" class="form-control" id="address" placeholder="Address" required></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="Buyer.BuyerEmail"><strong>Email</strong></label>
                            <input asp-for="Buyer.BuyerEmail" type="text" class="form-control" id="email" placeholder="Email" required>
                        </div>
                        <button type="submit" class="btn btn-outline-dark">Save Details</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
