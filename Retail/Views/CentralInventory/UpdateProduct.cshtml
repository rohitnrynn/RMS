@model Retail.Models.DBModels.Product

@{
    ViewData["Title"] = "UpdateProduct";
}

<h2>UpdateProduct</h2>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProduct">
